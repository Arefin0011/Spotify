//task01
public class Song{
  public String name;
  public String s_name;
  public int length;
  public int c=0;
  public Song next;
  
  public Song(String name, String artist, int l){
    this.name=artist;
    this.s_name=name;
    this.length=l;
    c++;
  }
  public void songInfo(){
    System.out.println("Title: "+s_name+", Artist: "+name);
    System.out.println("Length"+length+"minutes");}
}
//task02
public class Playlist{
  public String pl;
  public Song start;
  public Song None;
  public Playlist(String name){
    this.pl=name;
    System.out.println(this.pl+" created");
  }
}
//task03
public class Playlist{
  public String pl;
  public Song start;
  public Song None;
  public Playlist(String name){
    this.pl=name;
    System.out.println(this.pl+" created");
  }

  public void info(){
    System.out.println(this.pl+"bhas the following songs: ");
    Song temp=start;
    while(temp != None){
      System.out.println("Song-"+temp.c);
      System.out.println("Title: "+temp.s_name+", Artist: "+temp.name);
      System.out.println("Length "+temp.length+" minutes");
    temp=temp.next;}
  }
}

//task04
public class Playlist {
  public String pl;
  public Song start;
  public int count=0;
  public Playlist(String name){
    this.pl=name;
    this.start=null;
    System.out.println(this.pl+" created");}
  
  public void info(){
    System.out.println(this.pl+" has the following songs:");
    if(start == null){
      System.out.println("No songs in " + this.pl + ".");}
    else{
      Song temp=start;
      while(temp!=null){
        count++;
        System.out.println("Song-"+count);
        temp.songInfo();
        count++;
        temp = temp.next;}}
  }
  public void addSong(Song s){
    if(start==null){
      start=s;
    }else{
      Song temp=start;
      while(temp.next!=null){
        temp=temp.next;}
      temp.next=s;}
    System.out.println(s.s_name+" added to "+pl);}
}

//task05
public class Playlist {
  public String pl;
  public Song start;

  public Playlist(String name){
    this.pl=name;
    this.start=null;
    System.out.println(this.pl+" created");}
  
  public void info(){
            int count=1;
    System.out.println(this.pl+" has the following songs:");
    if(start == null){
      System.out.println("No songs in " + this.pl + ".");}
    else{
      Song temp=start;
      while(temp!=null){

        System.out.println("Song-"+count);
        count++;
        temp.songInfo();        
        temp = temp.next;}}
  }
  public void addSong(Song s){
    if(start==null){
      start=s;
    }else{
      Song temp=start;
      while(temp.next!=null){
        temp=temp.next;}
      temp.next=s;}
    System.out.println(s.s_name+" added to "+pl);}
  
 public void addSong(Song s, int indx){
    if(indx==0){
        s.next=start;
        start=s;
    }else{
        Song temp=start;
        int i=0;
        while(temp!=null&&i<indx-1){
            temp=temp.next;
            i++;}
        if(temp==null){
            System.out.println("Cannot add song to Index " + indx + ".");
            return;}
        s.next=temp.next;
        temp.next=s;}
    System.out.println(s.s_name + " added to " + pl);}
}

//task06
public class Playlist {
  public String pl;
  public Song start;
  
  public Playlist(String name){
    this.pl=name;
    this.start=null;
    System.out.println(this.pl+" created");}
  
  public void info(){
    int count=1;
    System.out.println(this.pl+" has the following songs:");
    if(start == null){
      System.out.println("No songs in " + this.pl + ".");}
    else{
      Song temp=start;
      while(temp!=null){
        
        System.out.println("Song-"+count);
        count++;
        temp.songInfo();        
        temp = temp.next;}}
  }
  public void addSong(Song s){
    if(start==null){
      start=s;
    }else{
      Song temp=start;
      while(temp.next!=null){
        temp=temp.next;}
      temp.next=s;}
    System.out.println(s.s_name+" added to "+pl);}
  
  public void addSong(Song s, int indx){
    if(indx==0){
      s.next=start;
      start=s;
    }else{
      Song temp=start;
      int i=0;
      while(temp!=null&&i<indx-1){
        temp=temp.next;
        i++;}
      if(temp==null){
        System.out.println("Cannot add song to Index " + indx + ".");
        return;}
      s.next=temp.next;
      temp.next=s;}
    System.out.println(s.s_name + " added to " + pl);}
  
  public void playSong(String s){
    Song temp=start;
    while(temp!=null){
      if(temp.s_name.equals(s)){
        System.out.println("Playing "+s+" by "+temp.artist+".");
        return;}
      temp=temp.next;}
    System.out.println(s+" not found in First Playlist.");
  }
}

